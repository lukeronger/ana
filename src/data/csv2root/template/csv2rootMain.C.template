#include <iostream>
#include <string>
#include "csv2root.h.template"

using namespace std;

void templateMain(const string& input_file){
  /*
    Should only need to create new instance of
    converter class and call conver method
  */

  Template t(input_file);
  t.convert();
  return;
}

int main(int argc, char** argv){
  /*
    Get arguments, return 1 if argc != 3
  */

  if(argc != 2){
    cout << "Usage: \n\n";
    cout << "./exe [input-file]" << endl;
    return 1;
  }else {
    templateMain(argv[1]);
    return 0;
  } 
}
